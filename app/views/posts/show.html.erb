<% title "Post" %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>
<p>
  <strong>Comment:</strong>
  <%= @post.comment %>
</p>
<p>
  <strong>Type:</strong>
  <%= @post.type %>
</p>
<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", posts_path %>
</p>
