<div class="job-content">
  <h1 class="jobtitle"><%= @job.title %></h1>
  
  <p class="date">
    <%= t("posted") %>: <%= @job.created_at.to_date %>

    <% if @job.owner == current_user %>
      <%= t("job.deadline") %>: <%= @job.deadline || t("job.deadline_forever") %>
    	<spam class="manage">
    		<%= link_to t(:edit), edit_job_path(), :class => "edit" %>
        <% if @job.closed? %>
          <%= link_to t(:open), open_job_path(), :confirm => t(:are_you_sure),
        :method => :put, :class => "open" %>
        <% else %>  
          <%= link_to t(:close), close_job_path(), :confirm => t(:are_you_sure), :method => :put, :class => "close" %>
        <% end %>
    		
        <%= link_to t(:delete), job_path(), :confirm => t(:are_you_sure),:method => :delete, :class => "delete" %>
    		
    	</spam>
    <% end %>
  </p>

  <p class="social">
    <%= link_to "Tweet this job!", "http://twitter.com?status=", :class => "twitter", :title => "Tweet this job!" %>
    <%= link_to "Facebook this job!", "http://www.facebook.com/sharer.php?", :class => "facebook", :title => "Facebook this job!" %>
  </p>


  <%= render :partial => "job", :object => @job %>

</div>


